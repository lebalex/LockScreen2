<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/frr"
    tools:context="xyz.lebalex.lockscreen.MainActivity$PlaceholderFragment"
    android:background="@android:color/background_dark"
    android:keepScreenOn="true">
>
    <GridLayout
        android:rowCount="2"
        android:columnCount="2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageButton
            android:layout_marginLeft="16dp"
            android:layout_row="0"
            android:layout_column="0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="refresh"
            android:id="@+id/button"
            android:background="@mipmap/ic_reload"
            android:clickable="true"
            android:layout_gravity="left"
            android:adjustViewBounds="false" />
        <ImageButton

            android:layout_row="0"
            android:layout_column="0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="back"
            android:id="@+id/button_back"
            android:background="@mipmap/ic_back"
            android:clickable="true"
            android:layout_gravity="left"
            android:adjustViewBounds="false"
            android:layout_marginLeft="46dp"/>
        <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="back"
            android:id="@+id/button_resize"
            android:background="@mipmap/ic_resize"
            android:clickable="true"
            android:layout_gravity="left"
            android:adjustViewBounds="false"
            android:layout_marginLeft="76dp"/>
        <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="back"
            android:id="@+id/button_plus"
            android:background="@mipmap/ic_plus"
            android:clickable="true"
            android:layout_gravity="left"
            android:adjustViewBounds="false"
            android:layout_marginLeft="106dp"/>
        <ImageButton
            android:layout_row="0"
            android:layout_column="0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="back"
            android:id="@+id/button_check"
            android:background="@mipmap/ic_check"
            android:clickable="true"
            android:layout_gravity="left"
            android:adjustViewBounds="false"
            android:layout_marginLeft="136dp"/>

        <TextView
            android:layout_row="0"
            android:layout_column="1"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/section_label"
            android:textColor="@android:color/background_light" />

        <ImageView
            android:layout_columnSpan="2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgView"
            app:srcCompat="@drawable/start"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_marginBottom="50dp" />
    </GridLayout>

</RelativeLayout>
